'use strict';

/**
 * @ngdoc function
 * @name 04TodoApp.controller:MainCtrl
 * @description
 * # MainCtrl
 * Controller of the 04TodoApp
 */
angular.module('04TodoApp')
  .controller('MainCtrl', function ($scope) {
    $scope.tareas = ['item 1', 'item 2', 'item 3', 'item 4'];
    $scope.addTarea = function() {
        $scope.tareas.push($scope.tarea);
        $scope.tarea = '';
    };
    $scope.delTarea = function (index) {
        $scope.tareas.splice(index, 1);
    };
  });
