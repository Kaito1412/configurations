import psutil

class Memory:
    
    @classmethod
    def total(self):
        return self._toMB(psutil.virtual_memory().total)

    @classmethod
    def used(self):
        return self._toMB(psutil.virtual_memory().used)

    @classmethod
    def percent(self):
        return psutil.virtual_memory().percent

    @classmethod
    def swap_total(self):
        return self._toMB(psutil.swap_memory().total)

    @classmethod
    def swap_used(self):
        return self._toMB(psutil.swap_memory().used)

    @classmethod
    def swap_percent(self):
        return psutil.swap_memory().percent

    def _toMB(self, bytesValue):
        return bytesValue * 1024**2 
