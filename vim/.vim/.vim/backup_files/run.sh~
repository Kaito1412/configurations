#!/usr/bin/env bash


if [ $# -lt 1 ]; then
    echo "Usage: run.sh <GIGAS_HAPI_REPOSITORY_PATH> [<TAG>] [additional 'docker run' parameters]"
    exit 0
fi


GIGAS_HAPI_PATH="$1"
shift
TAG="${1:-latest}"
shift


docker run --name hapi \
    --link db_mysql:db_mysql \
    --link db_redis:db_redis \
    --link hostbill:hostbill \
    -v "$GIGAS_HAPI_PATH":/gigas_hapi \
    -p 9000:9000 \
    -d \
    "$@" \
    gigas/hapi:"$TAG" \

