<?php
/** 
 * Clean tables in database after client delete 
 * */

file_put_contents('/tmp/PRUEBAAAAA.txt', $details);

$tables = array(
    array('gigas_client_support_notes', $details['id']),
    array('gigas_client_migrations', $details['id']),
    array('gigas_client_extradetails', $details['id']), 
    array('gigas_client_billing_extra', $details['id'])
);

$db = Engine::singleton()->getObject('db');
$query = $db->prepare(
    "DELETE FROM ? WHERE client_id = ?"
);

$query->executeMultiple($tables);
$query->closeCursor();
