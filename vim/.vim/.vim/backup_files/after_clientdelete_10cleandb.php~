<?php

$db = Engine::singleton()->getObject('db');

try {
    $query = $db->prepare("DELETE FROM gigas_client_extradetails WHERE client_id = ?");
    $query->execute([$details['id']]);
} catch {
    hbm_error_log("Failed to clear gigas_client_extradetails")
}

try {
    $query = $db->prepare("DELETE FROM gigas_client_support_notes WHERE client_id = ?");
    $query->execute([$details['id']]);
} catch {
    hbm_error_log("Failed to clear gigas_client_support_notes")
}

try {
    $query = $db->prepare("DELETE FROM gigas_client_migrations WHERE client_id = ?");
    $query->execute([$details['id']]);
} catch {
    hbm_error_log("Failed to clear gigas_client_migrations")
}

try {
    $query = $db->prepare("DELETE FROM gigas_client_billing_extra WHERE client_id = ?");
    $query->execute([$details['id']]);
} catch {
    hbm_error_log("Failed to clear gigas_client_billing_extra")
}

$query->closeCursor();
