<?php

require_once(APPDIR_MODULES . 'Hosting/gigashosting/libs/class.request.php');


class ProductController
{
    public function __construct($controller)
    {
        $this->request = new Request();
        $this->template = $controller->template;
        $this->engine = $controller->engine;
        $this->details = $controller->details;
        $this->language = $controller->language;
        $this->db = Engine::singleton()->getObject("db");
        $this->service = $this->details['account'];
        $this->vpsid = $this->details['vpsid'];
        $this->user_api = new GigasApi($this->details['account']);
        $this->hapi = new GApiWrapper();
        $this->server = $this->hapi->getServerDetails(array('id' => $this->service['server_id']));
        $this->admin_api = new GigasApi($this->server['server']);
    }
}
