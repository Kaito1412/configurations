        {php}
            if($_POST && isset($_POST['password']) && isset($_POST['username']))
            {
                $user = $_POST['username'];
                $pass = $_POST['password'];
                $ip = $_SERVER['SERVER_ADDR'];
                
                if($_SERVER['SERVER_NAME'] == 'dev.gigas.local')
                {
                    $urlfinal = "https://dev.gigas.local/panel/index.php?action=kayakologin";
                }
                else
                {
                    $urlfinal = "https://gigas.com/panel/index.php?action=kayakologin";
                }

                $ch = curl_init();
                $timeout = 5;
                curl_setopt($ch, CURLOPT_URL, $urlfinal);
                curl_setopt($ch, CURLOPT_RETURNTRANSFER,1);
                curl_setopt($ch, CURLOPT_CONNECTTIMEOUT,$timeout);
                curl_setopt($ch, CURLOPT_POST, 1);
                curl_setopt($ch, CURLOPT_POSTFIELDS, "username=$user&password=$pass&ipaddress=$ip");
                curl_setopt($ch, CURLOPT_SSL_VERIFYPEER, 0);
                $data = curl_exec($ch);
                if(curl_errno($ch))
                {
                    //echo 'Curl error: ' . curl_error($ch);
                }
                curl_close($ch);
                //print "Hola".$user.$pass.$ip;
                //print $data;
                # Ã‘apa para que tome bien el idioma despues de hacer login
                # if(isset($_GET['languagechange'])) header('Location: ?languagechange=' . $_GET['languagechange']);
            }
        {/php}
