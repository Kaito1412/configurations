             if($(this).hasClass('orig')) {
               $(this).val("").removeClass('orig');
               
             }
           });
           $('ul.tldDropDown li').click(function(){$('input[name=tld]').val($(this).attr('title'));
                                                   $('div.mainTld').html($(this).attr('title'));
                                                   $('div.dropbg').hide().removeClass('shown'); });
