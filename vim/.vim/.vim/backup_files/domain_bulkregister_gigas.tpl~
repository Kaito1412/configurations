          {php}
               $dotprices = array();
               if ($this->get_template_vars("action") == "domain-transfer") {
                   $action = "transfer";
               } else {
                   $action = "register";
               }

               foreach($this->get_template_vars('tarifas') as $p) {
                   if($p['period'] == 1) {
                       foreach ($p['prices'] as $key => $row) {
                           $period[$key] = $row['period'];
                       }

                       array_multisort($period, SORT_ASC, $p['prices']);
                       $dotprices[isset($p['prices'][0])?$p['prices'][0][$action]:$p[$action]][] = $p['tld'];
                   }
              }
              ksort($dotprices);
              $this->assign('dotprices', $dotprices);
          {/php}     
          <form class="ts">
            <div class="tstitle">
              <h3>{$lang.fee_title}</h3>
            </div>
