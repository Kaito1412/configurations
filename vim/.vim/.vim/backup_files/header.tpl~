    <script type="text/javascript">
        $.cookie('currency', '{$get_curr_code}', {literal}{path: '/'}{/literal});
        re = /curr=\d/g;
        window.location.href = window.location.href.replace(re,"") + '&currency={$smarty.get.curr}';
    </script>
