    {php}
    #
    # Hack para que en la compra después de hacer login se cargue el idioma seleccionado
    #
    $user_language = "spanish";

    if(isset($_SESSION['AppSettings']))
    {
        $client_id = $_SESSION['AppSettings']['login']['id'];
        $hapi = new GApiWrapper();
        $client_d = $hapi->getClientDetails(array('id' => $client_id));
        $user_language = $client_d['client']['language'];
    }

    $lang = new Language();
    $lang->setLanguage($user_language);
    $lang->addTranslation('cart');
    $lang->loadDictionary();

    $this->assign('language', $user_language);
    $this->assign('lang',  $lang->getDictionary());
    {/php}
{/if}
{if $logged=='1'}
    {php}
    #
    # Re-enable country data if session has been partially deleted
    #
    if (!array_key_exists('country', $_SESSION['AppSettings']['login']) || empty($_SESSION['AppSettings']['login']['country'] ))
    {
        $client_id = $_SESSION['AppSettings']['login']['id'];
        $hapi = new GApiWrapper();
        $client_d = $hapi->getClientDetails(array('id' => $client_id));
        $country = $client_d['client']['country'];
        $_SESSION['AppSettings']['login']['country'] = $country;
    }
    {/php}
{/if}

