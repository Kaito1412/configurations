    <script>
        {literal}
            $(function()
            {
                $('.hide').click(function()
                {
                    $(this).parent().fadeOut(500);
                });
                language = "{/literal}{$language|lower}{literal}"; // ES para español y EN para inglés

                vals = $('.notifier-pas p span');

                vals.each(function()
                {
                    actual = $(this).html();

                    if(actual.indexOf("|") != -1)
                    {
                        if (language == 'spanish')
                        {
                            $(this).html(actual.split('|')[1]);
                        }
                        else if(language == 'english')
                        {
                            $(this).html(actual.split('|')[0]);
                        }
                    }
                });
            });
        {/literal}
    </script>
    <section id="hideme {if $error}error{else}info{/if}" class="notifier-pas {if $error}np-error {else}np-ok{/if}">
            <a href="#hideme" class="hide">X</a>
            <p>
                {foreach from=$error item=blads name=key}
                    <span>{$blads}</span>
