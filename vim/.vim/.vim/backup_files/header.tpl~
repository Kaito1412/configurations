<script>
{literal}
$(function() {
	$('li.dropdown > a').click(function(e) {
		if ($(this).is( ":focus" )) {
			$(this).blur();
		} else {
			$(this).focus();
		}
		var dropdown=$(this).next('ul.dropdown-menu');
		$('li.dropdown ul.dropdown-menu').not(dropdown).hide();
		dropdown.toggle();
		e.preventDefault();
	});
	
	$(document).click(function(e) {
	    if ($(e.target).next('.dropdown-menu').length === 0 && $(e.target).parent().next('.dropdown-menu').length === 0) {
	        $('li.dropdown ul').hide();
	    }
	});
});
{/literal}
</script>

